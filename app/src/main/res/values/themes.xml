<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ECommerceApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ECommerceApp" parent="Base.Theme.ECommerceApp" />

    <style name="MediumTextViewThin">
        <item name="android:textColor">#4b4f60</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/sf_pro_display</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BigTextViewThin">
        <item name="android:textColor">#4b4f60</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_thin</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SmallTextViewThin">
    <item name="android:textColor">@color/g_gray700</item>
    <item name="android:textSize">10sp</item>
    <item name="fontFamily">@font/sf_pro_display</item>
    </style>

    <style name="greetTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="appNameStyle">
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="startButton">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/startButtonText</item>
        <item name="android:background">@drawable/button</item>
    </style>
    <style name="heading">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="editText">
        <item name="android:background">@drawable/edit_text</item>
        <item name="singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColorHint">@color/black</item>

    </style>

    <style name="btnGoogle_facebook">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/button_back_2</item>


    </style>

    <style name="tab_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sf_pro_display</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>